{
  "name": "react-ssr-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "devx": "cross-env NODE_ENV=development nodemon --watch src --exec \"npm run build && node dist/server/server.js\"",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --watch src/client --ext js,jsx,css --exec \"npm run build && node dist/server/server.js\"",
    "build:client": "webpack --config webpack.client.js",
    "build:server": "webpack --config webpack.server.js",
    "build": "npm run build:client && npm run build:server",
    "start": "cross-env NODE_ENV=production node dist/server/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.2",
    "autoprefixer": "^10.4.22",
    "axios": "^1.13.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ignore-loader": "^0.1.2",
    "mini-css-extract-plugin": "^2.9.4",
    "path-to-regexp": "^8.3.0",
    "postcss-custom-media": "^11.0.6",
    "postcss-import": "^16.1.1",
    "postcss-loader": "^8.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.1",
    "redux": "^5.0.1",
    "serialize-javascript": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-loader": "^10.0.0",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "nodemon": "^3.1.10",
    "style-loader": "^4.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
